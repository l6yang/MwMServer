<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="com.mwm.loyal.resources">

    <select id="loginByAccount" parameterType="com.mwm.loyal.model.AccountBean"
            resultType="com.mwm.loyal.model.AccountBean">
        SELECT *
        FROM MWM_USER
        WHERE ACCOUNT = #{account} AND PASSWORD = #{password}
    </select>

    <select id="getUserByAccount" parameterType="com.mwm.loyal.model.AccountBean"
            resultType="com.mwm.loyal.model.AccountBean">
        SELECT *
        FROM MWM_USER
        WHERE ACCOUNT = #{account}
    </select>

    <insert id="registerAccountbbb" parameterType="com.mwm.loyal.model.AccountBean">
        INSERT
        INTO MWM_USER (ACCOUNT, PASSWORD, NICKNAME)
        VALUES (#{account}, #{password}, #{nickname})
    </insert>

    <update id="updateAccountaa" parameterType="com.mwm.loyal.model.AccountBean">
        UPDATE MWM_USER
        SET NICKNAME = #{nickname}
        WHERE ACCOUNT = #{account}
    </update>
    <update id="destroyAccount" parameterType="com.mwm.loyal.model.AccountBean">
        DELETE FROM MWM_USER
        WHERE ACCOUNT = #{account} AND PASSWORD = #{password}
    </update>
</mapper>